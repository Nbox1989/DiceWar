<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_editbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#F0000000"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
        android:layout_weight="2"        
        android:layout_margin="8dp" 
        android:src="@drawable/edittool_deleteregion" />

    <ImageView
        android:id="@+id/iv_done"        
        android:layout_width="0dp"
    	android:layout_height="match_parent"
        android:layout_weight="2"       
        android:layout_margin="8dp"
        android:src="@drawable/edittool_saveregion" />

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
        android:layout_weight="2"       
        android:layout_margin="8dp"
        android:src="@drawable/edittool_savemap" />
    
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
        android:layout_weight="2"       
        android:layout_margin="8dp"
        android:src="@drawable/edittool_cancel" />

    

    
    

</LinearLayout>