<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_turnbar"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:background="#60000000" >
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="horizontal">
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:src="@drawable/diceblue" />

	    <ImageView
	        android:id="@+id/imageView2"        
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_margin="12dp"
	        android:src="@drawable/dicered" />    
	
	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_margin="12dp"
	        android:src="@drawable/dicepink" />    
	
	    <ImageView
	        android:id="@+id/imageView4"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_margin="12dp"
	        android:src="@drawable/diceyellow" />
	
	    <ImageView
	        android:id="@+id/imageView5"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_margin="12dp"
	        android:src="@drawable/dicegreen" />
	
	    <ImageView
	        android:id="@+id/imageView6"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_margin="12dp"
	        android:src="@drawable/dicepurple" />
	
	    <ImageView
	        android:id="@+id/imageView7"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_margin="12dp"
	        android:src="@drawable/diceorange" />    
	        
	     <ImageView
	        android:id="@+id/imageView8"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_margin="12dp"
	        android:src="@drawable/dicecyan" /> 
	
	</LinearLayout>
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="20dp"
    	android:orientation="horizontal">

		<TextView
		    android:id="@+id/textView1"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:gravity="center"
	        android:textColor="#FF000000"
	        android:textStyle="bold"
		    android:text="1" />		
		<TextView
		    android:id="@+id/textView2"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:textColor="#FF000000"
	        android:textStyle="bold"
		    android:text="2" />
		<TextView
		    android:id="@+id/textView3"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:textColor="#FF000000"
	        android:textStyle="bold"
		    android:text="3" />
		<TextView
		    android:id="@+id/textView4"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:textColor="#FF000000"
	        android:textStyle="bold"
		    android:text="4" />
		<TextView
		    android:id="@+id/textView5"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:textColor="#FF000000"
	        android:textStyle="bold"
		    android:text="5" />
		<TextView
		    android:id="@+id/textView6"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:textColor="#FF000000"
	        android:textStyle="bold"
		    android:text="6" />
		<TextView
		    android:id="@+id/textView7"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:textColor="#FF000000"
	        android:textStyle="bold"
		    android:text="7" />
		<TextView
		    android:id="@+id/textView8"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:textColor="#FF000000"
	        android:textStyle="bold"
		    android:text="8" />

	</LinearLayout>
</LinearLayout>